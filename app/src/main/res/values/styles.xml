<resources>

    <!-- Base application theme. -->
    <style name="ReAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
    </style>
    <style name="ReAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ReToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/toolbar_txt_size</item>
    </style>
    <style name="ReToolBarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorOnSecondary</item>
    </style>

    <!-- REAL ESTATE THEME -->
    <style name="ReTheme" parent="ReAppTheme">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="ReTheme.TxtView" parent="ReTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
    </style>

    <style name="ReTheme.List.TxtView" parent="ReTheme">
        <item name="android:layout_margin">@dimen/app_zero_dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:paddingStart">@dimen/default_padding_start</item>
    </style>

    <style name="ReTheme.ImgView" parent="ReTheme">
        <item name="android:layout_width">@dimen/re_add_edit_icon_size</item>
        <item name="android:layout_height">@dimen/re_add_edit_icon_size</item>
        <item name="android:layout_marginStart">@dimen/default_margin_start</item>
    </style>
    <style name="ReTheme.EditTxt" parent="ReTheme">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:layout_width">@dimen/app_zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
    </style>


    <style name="ReTheme.CardView" parent="ReTheme">
        <item name="android:background">@color/backgroundPrimary</item>
        <item name="cardCornerRadius">@dimen/default_card_corner_radius</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>


    <style name="ReTheme.SpinnerRoomPhoto" parent="ReTheme">
        <item name="android:layout_width">@dimen/app_zero_dp</item>
        <item name="android:layout_height">@dimen/default_spinner_height</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="layout_constraintWidth_percent">0.32</item>
        <item name="android:layout_marginTop">@dimen/default_spinner_margin_top</item>
    </style>
    <style name="ReTheme.Spinner" parent="ReTheme">
        <item name="android:layout_width">@dimen/app_zero_dp</item>
        <item name="android:layout_height">@dimen/default_spinner_height</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="ReTheme.CheckBox" parent="ReTheme">
        <item name="android:layout_margin">@dimen/app_zero_dp</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginStart">@dimen/default_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_end</item>
        <item name="layout_constraintWidth_percent">0.46</item>
        <item name="android:layout_width">@dimen/app_zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
    </style>
    <style name="ReTheme.Detail.CheckBox" parent="ReTheme.CheckBox">
        <item name="android:clickable">false</item>
        <item name="android:layout_margin">@dimen/app_zero_dp</item>
    </style>
    <style name="ReTheme.CheckBox.Sold" parent="ReTheme.CheckBox">
        <item name="android:checked">false</item>
        <item name="layout_constraintWidth_percent">0.28</item>
        <item name="android:layout_width">@dimen/app_zero_dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ReTheme.Loan" parent="ReTheme">
        <item name="android:layout_width">@dimen/app_zero_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_txt_size</item>
    </style>
    <style name="ReTheme.Loan.EditTxt" parent="ReTheme.Loan">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="layout_constraintWidth_percent">@dimen/loan_et_width_percent</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:hint">@string/loan_txt_default_number</item>
    </style>
    <style name="ReTheme.Loan.TxtView" parent="ReTheme.Loan">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="layout_constraintWidth_percent">@dimen/loan_tv_width_percent</item>
        <item name="android:textAlignment">textEnd</item>
    </style>


    <!-- UNUSED -->
    <style name="ReTheme.TxtInputLayDate" parent="ReTheme">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">false</item>
    </style>
    <style name="ReTheme.TxtInputLay" parent="ReTheme">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>
    <style name="ReTheme.TxtInputLayEt" parent="ReTheme">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:cursorVisible">true</item>
    </style>
    <style name="ReTheme.Button" parent="ReTheme">
        <item name="android:background">@drawable/btn_round_corner</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="ReTheme.ConstraintLayout" parent="ReTheme">
        <item name="android:padding">@dimen/default_padding</item>
    </style>


</resources>
