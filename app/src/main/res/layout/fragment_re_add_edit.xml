                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/frag_re_add_edit_et_photo"
                    app:srcCompat="@drawable/ic_take_photo_48" />

                <ImageButton
                    android:id="@+id/frag_re_add_edit_img_add_photo"
                    style="@style/ReTheme.ImgView"
                    android:layout_width="@dimen/re_add_edit_photo_icon_size"
                    android:layout_height="@dimen/re_add_edit_photo_icon_size"
                    android:layout_marginStart="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/txt_add_photo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/frag_re_add_edit_img_take_photo"
