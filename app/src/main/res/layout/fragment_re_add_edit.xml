<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_frag_add_edit_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundSecondary"
        android:theme="@style/ReTheme"
        tools:context=".view.fragments.ReAddEditFragment">


        <androidx.cardview.widget.CardView
            android:id="@+id/frag_add_edit_cardv_location"
            style="@style/ReTheme.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/frag_add_edit_img_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/default_img_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_location" />


                <TextView
                    android:id="@+id/frag_add_edit_tv_location"
                    style="@style/ReTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_location"
                    app:layout_constraintBottom_toBottomOf="@+id/frag_add_edit_img_location"
                    app:layout_constraintStart_toEndOf="@+id/frag_add_edit_img_location"
                    app:layout_constraintTop_toTopOf="@+id/frag_add_edit_img_location" />
                <TextView
                    android:id="@+id/frag_add_edit_tv_street"
                    style="@style/ReTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_street"
                    app:layout_constraintStart_toEndOf="@+id/frag_add_edit_img_location"
                    app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_tv_location" />
                <EditText
                    android:id="@+id/frag_add_edit_et_street"
                    style="@style/ReTheme.EditTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_street"
                    android:importantForAutofill="no"
                    android:inputType="textPostalAddress"
                    app:layout_constraintStart_toEndOf="@+id/frag_add_edit_tv_street"
                    app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_tv_location"
                    app:layout_constraintBottom_toBottomOf="@id/frag_add_edit_tv_street"/>


                <TextView
                    android:id="@+id/frag_add_edit_tv_additional_address"
                    style="@style/ReTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_additional_address"
                    app:layout_constraintStart_toEndOf="@+id/frag_add_edit_img_location"
                    app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_tv_street" />
                <TextView
                    android:id="@+id/frag_add_edit_tv_zip_code"
                    style="@style/ReTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_zip_code"
                    app:layout_constraintStart_toEndOf="@+id/frag_add_edit_img_location"
                    app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_tv_additional_address" />

                <Spinner
                    android:id="@+id/frag_re_add_spin_country"
                    style="@style/ReTheme.Spinner"
                    android:layout_marginEnd="@dimen/default_margin_end"
                    android:prompt="@string/txt_country"
                    app:layout_constraintStart_toEndOf="@+id/frag_add_edit_img_location"
                    app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_tv_zip_code"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/frag_add_edit_cardv_date_on_market"
            style="@style/ReTheme.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_cardv_location">

            <LinearLayout
                android:id="@+id/frag_re_add_ll_date_on_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/frag_add_edit_img_market_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/default_img_description"
                    app:srcCompat="@drawable/ic_calendar" />

                <EditText
                    android:id="@+id/frag_add_edit_et_market_date"
                    style="@style/ReTheme.EditTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_on_market_date"
                    android:importantForAutofill="no"
                    android:inputType="date" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/frag_add_edit_cardv_description"
            style="@style/ReTheme.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_cardv_date_on_market">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/frag_re_add_ll_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/frag_add_edit_img_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/default_img_description"
                        app:srcCompat="@drawable/ic_type" />

                    <Spinner
                        android:id="@+id/frag_re_add_spin_type"
                        style="@style/ReTheme.Spinner"
                        android:layout_marginEnd="@dimen/default_margin_end"
                        android:prompt="@string/txt_type" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/frag_re_add_ll_area"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_ll_type"
                    app:layout_constraintWidth_percent="0.5">

                    <ImageView
                        android:id="@+id/frag_add_edit_img_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/default_img_description"
                        app:srcCompat="@drawable/ic_area" />

                    <EditText
                        android:id="@+id/frag_add_edit_et_area"
                        style="@style/ReTheme.EditTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/txt_area"
                        android:importantForAutofill="no"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frag_re_add_ll_price"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/frag_re_add_ll_area"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_ll_type"
                    app:layout_constraintWidth_percent="0.5">

                    <ImageView
                        android:id="@+id/frag_add_edit_img_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/default_img_description"
                        app:srcCompat="@drawable/ic_price" />

                    <EditText
                        android:id="@+id/frag_add_edit_et_price"
                        style="@style/ReTheme.EditTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/txt_price"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/frag_re_add_ll_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_ll_price">

                    <ImageView
                        android:id="@+id/frag_add_edit_img_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/default_img_description"
                        app:srcCompat="@drawable/ic_room" />

                    <Spinner
                        android:id="@+id/frag_re_add_spin_rooms"
                        style="@style/ReTheme.SpinnerRoom"
                        android:layout_marginEnd="@dimen/default_margin_end"
                        android:prompt="@string/txt_rooms" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frag_re_add_ll_bedroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@+id/frag_re_add_ll_room"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_ll_price"
                    app:layout_constraintWidth_percent="0.5"

                    >

                    <ImageView
                        android:id="@+id/frag_add_edit_img_bedroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/default_img_description"
                        app:srcCompat="@drawable/ic_bedroom" />

                    <Spinner
                        android:id="@+id/frag_re_add_spin_bedrooms"
                        style="@style/ReTheme.SpinnerRoom"
                        android:layout_marginEnd="@dimen/default_margin_end"
                        android:prompt="@string/txt_bedrooms" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frag_re_add_ll_bathroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@+id/frag_re_add_ll_bedroom"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_ll_price"
                    app:layout_constraintWidth_percent="0.5">

                    <ImageView
                        android:id="@+id/frag_add_edit_img_bathroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/default_img_description"
                        app:srcCompat="@drawable/ic_bathroom" />

                    <Spinner
                        android:id="@+id/frag_re_add_spin_bathrooms"
                        style="@style/ReTheme.SpinnerRoom"
                        android:layout_marginEnd="@dimen/default_margin_end"
                        android:prompt="@string/txt_bathrooms" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frag_re_add_ll_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_ll_bathroom">

                    <ImageView
                        android:id="@+id/frag_add_edit_img_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/default_img_description"
                        app:srcCompat="@drawable/ic_description" />

                    <EditText
                        android:id="@+id/frag_add_edit_et_description"
                        style="@style/ReTheme.EditTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|end"
                        android:hint="@string/txt_description"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/frag_add_edit_cardv_poi"
            style="@style/ReTheme.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_cardv_description">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/frag_add_edit_img_poi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/default_img_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_poi" />

                <TextView
                    android:id="@+id/frag_add_edit_et_poi"
                    style="@style/ReTheme.TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/txt_poi"
                    app:layout_constraintBottom_toBottomOf="@+id/frag_add_edit_img_poi"
                    app:layout_constraintStart_toEndOf="@id/frag_add_edit_img_poi"
                    app:layout_constraintTop_toTopOf="@id/frag_add_edit_img_poi" />


                <CheckBox
                    android:id="@+id/frag_re_add_poi_bank"
                    style="@style/ReTheme.CheckBox"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/poi_bank"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_et_poi" />

                <CheckBox
                    android:id="@+id/frag_re_add_poi_food"
                    style="@style/ReTheme.CheckBox"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="wrap_content"
                    android:text="@string/poi_food"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/frag_re_add_poi_bank"
                    app:layout_constraintTop_toBottomOf="@+id/frag_add_edit_et_poi" />

                <CheckBox
                    android:id="@+id/frag_re_add_poi_health"
                    style="@style/ReTheme.CheckBox"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="match_parent"
                    android:text="@string/poi_health"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_poi_bank" />

                <CheckBox
                    android:id="@+id/frag_re_add_poi_restaurant"
                    style="@style/ReTheme.CheckBox"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="match_parent"
                    android:text="@string/poi_restaurant"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/frag_re_add_poi_bank"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_poi_food" />

                <CheckBox
                    android:id="@+id/frag_re_add_poi_school"
                    style="@style/ReTheme.CheckBox"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="match_parent"
                    android:text="@string/poi_school"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_poi_health" />

                <CheckBox
                    android:id="@+id/frag_re_add_poi_store"
                    style="@style/ReTheme.CheckBox"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="match_parent"
                    android:text="@string/poi_store"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/frag_re_add_poi_bank"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_poi_health" />

                <CheckBox
                    android:id="@+id/frag_re_add_poi_subway"
                    style="@style/ReTheme.CheckBox"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="match_parent"
                    android:text="@string/poi_subway"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_poi_school" />

                <CheckBox
                    android:id="@+id/frag_re_add_poi_park"
                    style="@style/ReTheme.CheckBox"
                    android:layout_width="@dimen/app_zero_dp"
                    android:layout_height="match_parent"
                    android:text="@string/poi_park"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/frag_re_add_poi_bank"
                    app:layout_constraintTop_toBottomOf="@+id/frag_re_add_poi_school" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>